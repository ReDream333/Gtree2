<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1749275366050-1" author="konon">
        <createTable tableName="nodes">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_nodes"/>
            </column>
            <column name="tree_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="genre" type="CHAR"/>
            <column name="birth_date" type="DATE"/>
            <column name="death_date" type="DATE"/>
            <column name="comment" type="VARCHAR(255)"/>
            <column name="photo_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1749275366050-2" author="konon">
        <createTable tableName="parent_child_relations">
            <column name="child_id" type="BIGINT"/>
            <column name="parent_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_parent_child_relations"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1749275366050-3" author="konon">
        <createTable tableName="roles">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_roles"/>
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1749275366050-4" author="konon">
        <createTable tableName="trees">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_trees"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_private" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1749275366050-5" author="konon">
        <createTable tableName="user_role">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1749275366050-6" author="konon">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="photo" type="VARCHAR(255)"/>
            <column name="email_verified" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1749275366050-7" author="konon">
        <createTable tableName="verification_token">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_verification_token"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="used" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1749275366050-8" author="konon">
        <addUniqueConstraint columnNames="name" constraintName="uc_roles_name" tableName="roles"/>
    </changeSet>
    <changeSet id="1749275366050-9" author="konon">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="1749275366050-10" author="konon">
        <addUniqueConstraint columnNames="username" constraintName="uc_users_username" tableName="users"/>
    </changeSet>
    <changeSet id="1749275366050-11" author="konon">
        <addUniqueConstraint columnNames="token" constraintName="uc_verification_token_token"
                             tableName="verification_token"/>
    </changeSet>
    <changeSet id="1749275366050-12" author="konon">
        <addForeignKeyConstraint baseColumnNames="tree_id" baseTableName="nodes" constraintName="FK_NODES_ON_TREE"
                                 referencedColumnNames="id" referencedTableName="trees"/>
    </changeSet>
    <changeSet id="1749275366050-13" author="konon">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="verification_token"
                                 constraintName="FK_VERIFICATION_TOKEN_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="1749275366050-14" author="konon">
        <addForeignKeyConstraint baseColumnNames="child_id" baseTableName="parent_child_relations"
                                 constraintName="fk_parchirel_on_child" referencedColumnNames="id"
                                 referencedTableName="nodes"/>
    </changeSet>
    <changeSet id="1749275366050-15" author="konon">
        <addForeignKeyConstraint baseColumnNames="parent_id" baseTableName="parent_child_relations"
                                 constraintName="fk_parchirel_on_parent" referencedColumnNames="id"
                                 referencedTableName="nodes"/>
    </changeSet>
    <changeSet id="1749275366050-16" author="konon">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="user_role"
                                 constraintName="fk_user_role_on_role" referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>
    <changeSet id="1749275366050-17" author="konon">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_role"
                                 constraintName="fk_user_role_on_user" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>